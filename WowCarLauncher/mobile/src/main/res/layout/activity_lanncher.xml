<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">
    <!--390  50 285 60-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_heightPercent="12.8%h">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:textColor="#fff"
                    app:layout_textSizePercent="60%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <ImageView
                android:id="@+id/iv_set"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/iv_content"
                android:src="@mipmap/ic_menu"
                app:layout_heightPercent="60%h"
                app:layout_widthPercent="60%h" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_dock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="@color/launch_dock_bg"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="15.3%h">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:gravity="center"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_all_apps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_apps"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_app_appss"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="全部应用"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/ll_fangkong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/iv_main_dock_icon"
                        android:src="@mipmap/ic_controller2" />

                    <ImageView
                        android:id="@+id/iv_fangkong_state"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/fanglong_disconnect"
                        app:layout_heightPercent="40%h"
                        app:layout_widthPercent="40%h" />
                </com.zhy.android.percent.support.PercentRelativeLayout>

            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>


        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_dock"
            android:layout_below="@id/ll_top"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <com.wow.carlauncher.activity.launcher.LDeviceView
                android:id="@+id/item_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <com.wow.carlauncher.activity.launcher.LMusicView
                android:id="@+id/item_music"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <com.wow.carlauncher.activity.launcher.LAMapView
                android:id="@+id/item_amap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <com.wow.carlauncher.activity.launcher.LWeatherView
                android:id="@+id/item_music2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</FrameLayout>