<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wallpaper_01"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="20%h">

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/ll_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical|end"
                        android:textColor="#fff"
                        app:layout_textSizePercent="70%h" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="bottom|start"
                            android:textColor="#fff"
                            app:layout_heightPercent="50%h"
                            app:layout_textSizePercent="25%h" />

                        <TextView
                            android:id="@+id/week"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="top|start"
                            android:textColor="#fff"
                            app:layout_heightPercent="50%h"
                            app:layout_textSizePercent="25%h" />
                    </com.zhy.android.percent.support.PercentLinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_tianqi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@mipmap/wic_no"
                            app:layout_widthPercent="100%h" />
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_tianqi"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="bottom|start"
                            android:lines="1"
                            android:text="等待天气数据"
                            android:textColor="#fff"
                            app:layout_heightPercent="50%h"
                            app:layout_textSizePercent="25%h" />

                        <TextView
                            android:id="@+id/tv_tianqi2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="top|start"
                            android:lines="1"
                            android:text="等待天气数据"
                            android:textColor="#fff"
                            app:layout_heightPercent="50%h"
                            app:layout_textSizePercent="25%h" />
                    </com.zhy.android.percent.support.PercentLinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>

                <ImageView
                    android:id="@+id/iv_set"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/iv_content"
                    android:src="@mipmap/ic_menu"
                    app:layout_heightPercent="30%h"
                    app:layout_widthPercent="30%h" />
            </com.zhy.android.percent.support.PercentRelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            app:layout_heightPercent="64%h">

            <FrameLayout
                android:id="@+id/item_music"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />


            <FrameLayout
                android:id="@+id/item_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />

            <FrameLayout
                android:id="@+id/item_amap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />
        </LinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_dock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/launch_dock_bg"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="16.5%h">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_dock5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dock5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:gravity="center"
                    android:src="@mipmap/ic_add_app"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_dock5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_all_apps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/iv_main_dock_icon"
                    android:src="@mipmap/ic_apps"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h" />

                <TextView
                    android:id="@+id/tv_app_appss"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="全部应用"
                    android:textColor="@android:color/white"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="15%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/ll_controller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    app:layout_heightPercent="70%h"
                    app:layout_widthPercent="70%h">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/iv_main_dock_icon"
                        android:src="@mipmap/ic_controller2" />

                    <ImageView
                        android:id="@+id/iv_fangkong_state"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/fanglong_disconnect"
                        app:layout_heightPercent="40%h"
                        app:layout_widthPercent="40%h" />
                </com.zhy.android.percent.support.PercentRelativeLayout>

            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</FrameLayout>