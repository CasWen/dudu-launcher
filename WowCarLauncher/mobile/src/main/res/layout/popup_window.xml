<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_popup_icon" />

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_widthPercent="50%h">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/iv_xunhuan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_move"
                app:layout_heightPercent="70%h"
                app:layout_widthPercent="70%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/iv_controller"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_controller"
                app:layout_heightPercent="70%h"
                app:layout_widthPercent="70%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </LinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_plugin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/ll_menu"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" />
</com.zhy.android.percent.support.PercentRelativeLayout>