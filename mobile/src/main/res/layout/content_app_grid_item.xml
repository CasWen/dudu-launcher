<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/n_l_item1_bg_cb"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            app:layout_heightPercent="60%h"
            app:layout_marginPercent="20%h"
            app:layout_widthPercent="60%h" />

        <View
            android:id="@+id/line1"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            app:layout_heightPercent="80%h"
            app:layout_marginPercent="5%h" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:text="@string/app_name"
            app:layout_heightPercent="60%h"
            app:layout_marginPercent="20%h"
            app:layout_textSizePercent="25%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentFrameLayout>