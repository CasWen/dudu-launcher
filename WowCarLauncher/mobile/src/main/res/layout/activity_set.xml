<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:st="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="应用设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="桌面设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="悬浮窗设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="时间设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_system_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="系统设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="帮助"
                    st:type="buttonB" />

                <View style="@style/Interval" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:background="@color/main_interval_color" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/content_set_app" />

                <include
                    layout="@layout/content_set_launcher"
                    android:visibility="gone" />

                <include
                    layout="@layout/content_set_popup"
                    android:visibility="gone" />

                <include
                    layout="@layout/content_set_time"
                    android:visibility="gone" />

                <include
                    layout="@layout/content_set_help"
                    android:visibility="gone" />

                <include
                    layout="@layout/content_set_system"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>