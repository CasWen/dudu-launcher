<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/n_home_bg"
    android:orientation="vertical">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <com.wow.carlauncher.view.activity.launcher.view.LDockView
            android:id="@+id/ll_dock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cad4dc" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="horizontal"
            app:layout_marginBottomPercent="6%h"
            app:layout_marginTopPercent="6%h">

            <com.wow.carlauncher.view.activity.launcher.view.LAMapView
                android:id="@+id/item_amap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_marginLeftPercent="4%h"
                app:layout_marginRightPercent="1.5%h" />

            <com.wow.carlauncher.view.activity.launcher.view.LMusicView
                android:id="@+id/item_music"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_marginLeftPercent="1.5%h"
                app:layout_marginRightPercent="1.5%h" />

            <com.wow.carlauncher.view.activity.launcher.view.LWeatherView
                android:id="@+id/item_music2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_marginLeftPercent="1.5%h"
                app:layout_marginRightPercent="4%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.wow.carlauncher.view.activity.launcher.view.LPromptView
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>