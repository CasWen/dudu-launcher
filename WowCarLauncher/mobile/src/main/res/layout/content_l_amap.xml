<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_l_amap"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:lines="1"
        android:text="导航"
        android:textColor="@android:color/white"
        app:layout_heightPercent="12%h"
        app:layout_marginTopPercent="3%h"
        app:layout_textSizePercent="7%h" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/ll_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="55%h"
        app:layout_widthPercent="55%h">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            app:layout_heightPercent="66%h"
            app:layout_widthPercent="66%h" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="30%h">

        <LinearLayout
            android:id="@+id/ll_controller"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="66%h">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_go_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_jia"
                    app:layout_heightPercent="60%w"
                    app:layout_widthPercent="60%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_go_company"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_gongsi"
                    app:layout_heightPercent="60%w"
                    app:layout_widthPercent="60%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </LinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_navi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_road"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="500米后 胶州路"
                android:textColor="#f1f1f1"
                app:layout_textSizePercent="18%h" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="剩余20公里"
                android:textColor="#f1f1f1"
                app:layout_textSizePercent="18%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentFrameLayout>
</com.zhy.android.percent.support.PercentLinearLayout>