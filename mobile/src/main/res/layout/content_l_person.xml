<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/n_l_item1_bg"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry">

    <FrameLayout
        android:id="@+id/rl_moren"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_marginLeftPercent="2%h"
            app:layout_marginRightPercent="2%h">


            <com.zhy.android.percent.support.PercentFrameLayout
                android:id="@+id/fl_top2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="12%h">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:text="个人中心"
                    android:textColor="#101933"
                    app:layout_textSizePercent="50%h" />
            </com.zhy.android.percent.support.PercentFrameLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </FrameLayout>
</com.zhy.android.percent.support.PercentLinearLayout>