<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:st="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="常用设置"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="主题设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="首页标签"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_load_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="APP联动启动"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="蓝牙设置"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_ble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="蓝牙设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="其他设置"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="其他设置"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="悬浮窗"
                    st:type="buttonB" />

                <View style="@style/Interval" />

                <com.wow.carlauncher.common.view.SetView
                    android:id="@+id/sg_system_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    st:titleEx="系统"
                    st:type="buttonB" />

                <View style="@style/Interval" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:background="@color/main_interval_color" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/ll_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </FrameLayout>
</LinearLayout>