<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/set_view_top_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:padding="10dp"
                    android:src="@mipmap/ic_back2" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_persion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="个人中心"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:text="常用设置"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="主题设置"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="首页"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="插件设置"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_load_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="APP联动启动"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_driving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="驾驶界面"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:text="蓝牙设置"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_obd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="OBD设置"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_fk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="方控设置"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:text="其他设置"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_popup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="悬浮窗"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_system_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleEx="系统"
                        app:type="buttonB" />

                    <View style="@style/Interval" />

                    <com.wow.carlauncher.common.view.SetView
                        android:id="@+id/sg_dev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:titleEx="测试"
                        app:type="buttonB" />

                    <View style="@style/Interval" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:background="@color/main_interval_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/set_view_top_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/set_content_back"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_back2" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="返回"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/set_content_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/set_content_save"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text="保存"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/set_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>