<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry">

    <com.zhy.android.percent.support.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%h">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:text="高德导航"
            app:layout_marginLeftPercent="25%h"
            app:layout_marginRightPercent="25%h"
            app:layout_textSizePercent="50%h" />
    </com.zhy.android.percent.support.PercentFrameLayout>

    <FrameLayout
        android:id="@+id/rl_moren"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_moren"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="2%h"
            app:layout_marginRightPercent="2%h">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_heightPercent="15%h">

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:id="@+id/btn_gd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            app:layout_widthPercent="100%h">

                            <ImageView
                                android:id="@+id/iv_dh"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_heightPercent="60%h"
                                app:layout_widthPercent="60%h" />
                        </com.zhy.android.percent.support.PercentLinearLayout>
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <View
                        android:id="@+id/line2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/btn_nav_j"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        app:layout_widthPercent="110%h">

                        <ImageView
                            android:id="@+id/iv_dh_j"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_heightPercent="60%h"
                            app:layout_widthPercent="60%h" />
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <View
                        android:id="@+id/line3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/btn_nav_gs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        app:layout_widthPercent="110%h">

                        <ImageView
                            android:id="@+id/iv_dh_gs"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_heightPercent="60%h"
                            app:layout_widthPercent="60%h" />
                    </com.zhy.android.percent.support.PercentLinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </FrameLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_daohang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_marginLeftPercent="2%h"
        app:layout_marginRightPercent="2%h">

        <FrameLayout
            android:id="@+id/fl_navinfo_root"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="22%h"
            app:layout_marginTopPercent="12%h">

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_navinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="100%h">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/hud_sou9"
                        app:layout_heightPercent="70%h"
                        app:layout_widthPercent="70%h" />
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <TextView
                    android:id="@+id/tv_next_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="100M后"
                    android:textColor="#fff"
                    app:layout_heightPercent="78%h"
                    app:layout_textSizePercent="35%h" />

                <TextView
                    android:id="@+id/tv_next_road"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="进入香港路"
                    android:textColor="#ddd"
                    app:layout_heightPercent="54%h"
                    app:layout_textSizePercent="22%h" />
            </com.zhy.android.percent.support.PercentRelativeLayout>
        </FrameLayout>

        <View
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/fl_navinfo_root" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_xiansu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/fl_navinfo_root"
            android:orientation="vertical"
            app:layout_heightPercent="14%h"
            app:layout_marginLeftPercent="3%h"
            app:layout_marginTopPercent="3%h"
            app:layout_widthPercent="14%h">

            <TextView
                android:id="@+id/tv_xiansu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_horizontal|bottom"
                android:text="120"
                app:layout_textSizePercent="35%h" />

            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal|top"
                android:text="KM/H"
                app:layout_textSizePercent="15%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <LinearLayout
            android:id="@+id/ll_controller"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_heightPercent="15%h">

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/btn_mute"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:layout_widthPercent="100%h">

                    <ImageView
                        android:id="@+id/iv_mute"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="60%h"
                        app:layout_widthPercent="60%h" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:id="@+id/line5"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="剩余10.1公里"
                    app:layout_textSizePercent="35%h" />

                <View
                    android:id="@+id/line6"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/btn_close"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:layout_widthPercent="100%h">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="60%h"
                        app:layout_widthPercent="60%h" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </LinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_controller"
            android:layout_below="@id/fl_navinfo_root">

            <ImageView
                android:id="@+id/iv_road"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/n_road1"
                app:layout_heightPercent="80%h"
                app:layout_marginTopPercent="15%h"
                app:layout_widthPercent="75%h" />

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                app:layout_heightPercent="34%h"
                app:layout_marginTopPercent="50%h"
                app:layout_widthPercent="34%h" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.wow.carlauncher.common.view.LukuangView
            android:id="@+id/lukuang"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_controller"
            android:layout_below="@id/fl_navinfo_root"
            android:layout_alignParentRight="true"
            app:layout_marginBottomPercent="10%h"
            app:layout_marginRightPercent="2%h"
            app:layout_marginTopPercent="5%h" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>